  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>LotRM_MeleeWeapon_GondorSpear</defName>
    <label>Gondorian spear</label>
    <description>A polearm tipped with a sharp point for stabbing opponents in melee combat. This one has a particularly nasty point forged by the Men of Gondor.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Gondor/averouisGondorSpear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.75</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>LotRM_SpearGondor</li>
    </weaponTags>
    <costStuffCount>105</costStuffCount>
    <statBases>
      <WorkToMake>19550</WorkToMake>
      <Mass>2.3</Mass>
    </statBases>
    <equippedAngleOffset>-25</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.3</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>23</power>
        <cooldownTime>2.3</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LotRM_G_WeaponsOne</researchPrerequisite>
    </recipeMaker>
    <tradeTags>
      <li>LotRM_GondorianWeapons</li>
    </tradeTags>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
        <verticalFlipNorth>true</verticalFlipNorth>
        <angleAdjustmentWest>90</angleAdjustmentWest>
        <angleAdjustmentEast>-90</angleAdjustmentEast>
        <northOffset>(0.35,0,0.2)</northOffset>
        <eastOffset>(0.1,0,0.1)</eastOffset>
        <westOffset>(-0.1,-0.2,0.1)</westOffset>
        <southOffset>(-0.35,0,-0.2)</southOffset>
      </li>
    </comps>
  </ThingDef>
